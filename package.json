{
  "name": "shebang-check",
  "version": "1.0.5",
  "engines": {
    "node": ">=11.14.0"
  },
  "description": "Checks if a given file, or the bin files pointed to in package.json have a shebang.",
  "repository": {
    "type": "git",
    "url": "https://github.com/reggi/node-shebang-check.git"
  },
  "license": "ISC",
  "author": "Thomas Reggi",
  "main": "./build/shebang_check.js",
  "bin": "./build/shebang_check_cli.js",
  "scripts": {
    "build": "rm -rf ./build/ && tsc",
    "coverage:open": "open ./coverage/index.html",
    "open:coverage": "npm run coverage:open",
    "lint:check": "gts check",
    "lint:fix": "gts fix",
    "sortme": "npx sort-package-json",
    "test": "find ./src -name '*_test.ts' | xargs mocha -r ts-node/register -R spec",
    "posttest": "npm run lint:check",
    "test:coverage": "nyc --reporter=html --reporter=text --reporter=text-summary npm test && npm run open:coverage",
    "test:coverage-ci": "nyc npm test",
    "ts-node": "ts-node"
  },
  "devDependencies": {
    "@types/chai": "^4.2.12",
    "@types/mocha": "^8.0.1",
    "@types/node": "^14.0.22",
    "@types/sinon": "^9.0.4",
    "chai": "^4.2.0",
    "eslint": "^6.0.0",
    "gts": "^2.0.2",
    "mocha": "^8.1.1",
    "nyc": "^15.1.0",
    "sinon": "^9.0.2",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.6"
  }
}
